{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "no-shadowed-variable": false,
    "member-access": false,
    "no-console": false,
    "interface-name": false,
    "member-ordering": false,
    "quotemark": [true, "single"]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}