{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "baseUrl": ".",
    "sourceMap": false,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "react-native"
  ]
}